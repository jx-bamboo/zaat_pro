<%= turbo_frame_tag "text_to" do %>
  <%= link_to "Text to", text_to_order_index_path, data: {"turbo-prefetch": "false"}, class: "btn btn-transparent text-light border-0 bg_gradient" %>
  <%= link_to "Picture to", picture_to_order_index_path, data: {"turbo-prefetch": "false"}, class: "btn btn-transparent text-light border-0" %>

  <%= form_for(@order, url: order_index_path(@order), html: {class: "order_form", id: "order_form"}, data: {turbo: false}) do |f| %>
    <%= f.hidden_field :txhash %>
    <div class="mt-3">
      <%= f.text_area :prompt, rows: 8, class: "form-control text-secondary bg-transparent border-dark mb-3 fs0875", contenteditable: true, placeholder: "Enter your Prompt", required: "required" %>
    </div>

    <div class="mb-3 text-secondary nav navbar">xToken Rewards Service Fee <span class="token_c">1000</span></div>
    <input type="button" class="form-control hover_to_gradient btn btn-lg btn-dark rounded-pill mb-5" id="order_btn" value="Create & Pay" />
  <% end %>
<% end %>
<script src="https://unpkg.com/web3@4.10.0/dist/web3.min.js"></script>
<%= javascript_include_tag "order_pay", "data-turbo-track": "reload" %>