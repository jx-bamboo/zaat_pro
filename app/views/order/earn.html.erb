<div class="home">
  <%= render "layouts/header" %>
  <div class="container">
    <div class="row text-light fs0875 text-center">
      <div class="col-sm-6 offset-sm-3 px-2">
        <div class="bg_order_card px-3 h-100 mb-3">
          <div class="fs-4 text-center py-5">Upload 3D Models to Earn</div>
          <%= form_for(@order, url: order_index_path(@order), html: {class: "order_form"}) do |f| %>
            <div class="bg-transparent border-0">
              <h2 class="fs0875">
                <div class="w-100 border-0 py-3 d-flex justify-content-between align-items-center">
                  <div>Upload your files</div>
                  <!-- <%= bootstrap_icon "chevron-down", width: 24, height: 24 %> -->
                  <a class="icon-link text-decoration-none" href="javascript:void(0)" data-controller="clear">
                    <%= image_tag "erase.svg", width: 14 %>
                    <input type="reset" value="Remove" class="border-0 bg-transparent text-light" data-action="click->clear#clear" />
                  </a>
                </div>
              </h2>
              <div >
                <div class="accordion-body mx-0 px-0 mb-3">
                  <div class="mb-3 position-relative">
                    <div class="text-center border border-dark py-3" style="height: 200px;">
                      <%= image_tag "add.svg", class: "rounded img-fluid h-100 shadow", id: "preview", alt: "CAKEBABA", title: "CAKEBABA" %>
                      <%= f.file_field :model, class: "form-control preview-file", accept: "/*", onclick: "uploadImg('order_file','preview')", alt: "Upload", title: "Upload" %>
                    </div>
                    <div class="text-center text-secondary">Drag and drop your 3D files here, or click to select files.</div>
                  </div>
                  <%= javascript_include_tag "preview_img", "data-turbo-track": "reload" %>
                </div>
              </div>
            </div>
            <button type="button" class="eth_pay form-control hover_to_gradient btn btn-lg btn-dark rounded-pill mb-5" disabled>Coming soon ...</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>