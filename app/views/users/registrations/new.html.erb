<%= turbo_frame_tag "user_sign" do %>
  <div class="position-relative">
    <%= link_to auth_modal_path, class: "position-absolute top-0 start-0 bg-transparent border-0 p-3", data: {"turbo-prefetch": "false"} do %>
      <%= image_tag "to_left.svg" %>
    <% end %>
    <div class="login_div py-5 px-2 px-sm-3 px-md-4 px-lg-5 shadow-lg">
      <div class="text-center">
        <h3>Log in to Zaat</h3>
        <div class="fs0875 px-2 fs-bolder">
          By logging in to Zaat, you agree to
          <a href="" class="text-decoration-none">Terms of Service</a> and
          <a href="" class="text-decoration-none">Privacy Policy</a>.
        </div>
      </div>
      <div class="mx-auto row col-sm-8 pt-3">
        <%= turbo_frame_tag "sign_up_errors" %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "px-0 mb-3"}) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg text-bg-dark border-0", placeholder: "Enter email address", required: "required" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg text-bg-dark border-0", placeholder: "Enter password", required: "required" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg text-bg-dark border-0", placeholder: "Enter password again", required: "required" %>
          </div>
          <div class="pt-2 text-end d-flex justify-content-end">
            <%= link_to "Log in", new_user_session_path, class: "text-light text-decoration-none nav navbar me-3", data: {"turbo-prefetch": "false"} %>
            <button type="submit" class="btn btn-lg px-5 btn-dark rounded-pill hover_to_gradient d-flex">
              <span class="fs0875 py-1">Sign up</span>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
